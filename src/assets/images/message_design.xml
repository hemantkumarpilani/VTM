<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Style for "rectangle_" -->
    <!-- Add this snippet to layer-list xml in drawable. -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:color="@color/white"
                android:width="1dp"></stroke>
            <solid android:color="@color/red" />
            <item android:name="android:shadowColor">#80000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">1</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>
</layer-list>